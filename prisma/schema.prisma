// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Servico {
  id               String        @id @default(uuid())
  tipo             TipoServico
  status           StatusServico @default(PENDENTE)
  descricao        String?
  data_solicitacao DateTime      @default(now())
  data_atualizacao DateTime      @updatedAt
  usuario          User          @relation(fields: [usuarioId], references: [id])
  usuarioId        String
  created_at       DateTime?     @default(now())
  updated_at       DateTime?     @default(now())
  Interacao        Interacao[]

  @@map("servicos")
}

enum TipoServico {
  ENTREGA
  MOTORISTA_PESSOAL
}

enum StatusServico {
  PENDENTE
  ACEITO
  EM_ANDAMENTO
  CONCLUIDO
}

enum TipoPagamento {
  CONTA_3DIAS
  CONTA_7DIAS
  CONTA_15DIAS
  CONTA_30DIAS
}

model Interacao {
  id        String   @id @default(uuid())
  conteudo  String // Conteúdo da resposta/comentário
  autor     User     @relation(fields: [autorId], references: [id]) // Autor da interação (admin ou usuário)
  autorId   String
  servico   Servico  @relation(fields: [servicoId], references: [id]) // Pedido ao qual pertence a interação
  servicoId String
  criado_em DateTime @default(now()) // Data da interação
  tipo      String

  @@map("interacoes")
}

enum Role {
  ADMIN
  CLIENT
}

model User {
  id             String        @id @default(uuid())
  proces_number  String        @unique
  name           String
  email          String        @unique
  user_name      String
  nif            String
  morada         String
  role           Role
  redes          String
  tipo_pagamento TipoPagamento
  telefone       String        @unique
  password       String
  created_at     DateTime?     @default(now())
  updated_at     DateTime?     @default(now())
  servicos       Servico[] // Relacionamento com os serviços
  Interacao      Interacao[]

  @@map("users")
}
